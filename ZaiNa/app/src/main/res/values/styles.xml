<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog_01">
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--无边框-->
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--<item name="android:background">#FFFFFFFF</item>-->

    </style>

    <style name="anim_dialog">
        <!--进入动画-->
        <item name="android:windowEnterAnimation">@anim/down_top</item>
        <!--退出动画-->
        <item name="android:windowExitAnimation">@anim/top_down</item>
    </style>
    <style name="anim_dialog01">
        <!--进入动画-->
        <item name="android:windowEnterAnimation">@anim/scale</item>
    </style>

</resources>
