<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_02"></include>

    <com.zaina.utils.CircleImageView
        android:id="@+id/iv_01"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150px"
        android:src="@mipmap/update_img"
        app:civ_border_color="@color/android_theme"
        app:civ_border_width="5px" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="100px"
        android:background="@color/color_hui"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/phone_img" />

        <EditText
            android:id="@+id/et_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textSize="20px" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/color_hui"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/access" />

        <EditText
            android:id="@+id/et_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:background="@null"
            android:hint="请输入密码"
            android:textSize="20px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/color_hui"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="50px"
        android:background="@color/color_hui"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/yanzm" />

        <EditText
            android:id="@+id/et_03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:textSize="20px" />
        <TextView
            android:id="@+id/bt_01"
            android:layout_width="140px"
            android:layout_height="50px"
            android:layout_marginRight="40px"
            android:background="@color/android_theme"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/color_while"
            android:textSize="@dimen/activity_textsize_20" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/color_hui"></View>

    <TextView
        android:id="@+id/bt_02"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="50px"
        android:background="@color/android_theme"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/color_while" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:gravity="right"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_02"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginRight="5px"
            android:background="@mipmap/xuanze_hui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20px"
            android:text="我已同意相关文字条款" />
    </LinearLayout>
</LinearLayout>